        SetText(WalletAddress, GetSetting("User"));
        Wait(1);
        var buttonLogin = ElementByXPath("//div[contains(text(),'Enter the Faucet') and not(contains(@style,'display: none;'))]");
        if (!IsVisible(buttonLogin))
