        }
        Click(buttonLogin);
        Wait(1);
        var Login2 = ElementByXPath("//div[contains(@id,'captchaButton')]");
        if (IsVisible(Login2))
        {
            Click(Login2);
        }

        //This faucet has nothing to do here. We will let Faucet Collector handle it.
        return base.DoLogin();
